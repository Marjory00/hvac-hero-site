{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      // General Aliases
      "@/*": ["./src/*"], 
      "@/lib/*": ["./src/lib/*"],
      
      // FIX: The alias key uses '/*'. The target paths MUST also use '/*'.
      // This tells the compiler that the remaining string from the import (e.g., 'pricing_engine') 
      // should be appended to the target path.
      
      "@/logic/pricing/*": [
        "src/lib/private/*", // FIX: Changed from .ts file name to a directory wildcard
        "src/lib/private_stubs/*" // FIX: Changed from .ts file name to a directory wildcard
      ],
      
      "@/logic/validation/*": [
        "src/lib/private/*", // FIX: Changed from .ts file name to a directory wildcard
        "src/lib/private_stubs/*" // FIX: Changed from .ts file name to a directory wildcard
      ]
    }
  },
  
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.js",
    "**/*.jsx", 
    "global.d.ts", 
    "jest-setup.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}