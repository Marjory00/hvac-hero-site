{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // other options...
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Must be set to the project root
    "paths": {
      "@/*": ["./src/*"], 
      "@/lib/*": ["./src/lib/*"],
      
      //FIX: This path alias is now correctly nested inside the "paths" object
      "@/logic/pricing": [
        "src/lib/private/pricing_engine.ts",
        "src/lib/private_stubs/pricing_engine.ts" 
      ],
        // NEW ALIAS: Validation Logic
      "@/logic/validation": [
        "src/lib/private/complex_validation.ts",
        "src/lib/private_stubs/complex_validation.ts"
      ],
    }
  },
  
  // FIX: The "include" and "exclude" arrays are now correctly placed outside the "compilerOptions" block
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.js",
    "**/*.jsx", 
    "global.d.ts", 
    "jest-setup.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}