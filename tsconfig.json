{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
     "allowSyntheticDefaultImports": true, // Often helps with non-JS imports
    "esModuleInterop": true,           // Ensures compatibility with CommonJS and ES Modules//
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Must be set to the project root
    "paths": {
      "@/*": ["./src/*"], 
      "@/lib/*": ["./src/lib/*"]
  }
},
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js",
   "**/*.jsx", "global.d.ts", "jest-setup.d.ts",
  ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
