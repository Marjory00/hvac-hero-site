{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"], 
      "@/lib/*": ["./src/lib/*"],
      
      // FIX: Use a wildcard (*) in the alias key to allow multiple target paths.
      // The compiler will check these paths in order.
      // The first matching path is used.
      
      "@/logic/pricing/*": [
        "src/lib/private/pricing_engine.ts", // Local/Private Logic (Priority 1)
        "src/lib/private_stubs/pricing_engine.ts" // Public Stub (Priority 2)
      ],
      
      "@/logic/validation/*": [
        "src/lib/private/complex_validation.ts", // Local/Private Logic (Priority 1)
        "src/lib/private_stubs/complex_validation.ts" // Public Stub (Priority 2)
      ]
    }
  },
  
  // These arrays are correctly placed outside of compilerOptions
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.js",
    "**/*.jsx", 
    "global.d.ts", 
    "jest-setup.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}