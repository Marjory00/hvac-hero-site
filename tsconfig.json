{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      // General Aliases
      "@/*": ["./src/*"], 
      "@/lib/*": ["./src/lib/*"],
      
      // CORRECT: Wildcards in key and value array to allow multiple paths (private/stub)
      "@/logic/pricing/*": [
        "src/lib/private/*", 
        "src/lib/private_stubs/*"
      ],
      
      // CORRECT: Wildcards in key and value array
      "@/logic/validation/*": [
        "src/lib/private/*", 
        "src/lib/private_stubs/*"
      ]
    }
  },
  
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.js",
    "**/*.jsx", 
    "global.d.ts", 
    "jest-setup.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}